---
import "../styles/global.css";
import Footer from "../components/footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Home | Tim Nees Architects</title>
  </head>
  <body class="body__homepage">
    <div class="heading backdrop">
      <h1 class="main-heading">newworkstudio/&nbsp;</h1>
      <h2 class="main-heading">timneesarchitect</h2>
    </div>
    <Footer />
  </body>
</html>

<style>
  .body__homepage {
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    position: relative;
    align-items: flex-end;
  }

  .body__homepage::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("/desk.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    filter: grayscale(100%);
    z-index: -1;
  }
  .heading {
    align-self: flex-end;
    width: min-content;
  }

  .main-heading {
    font-size: 4.209rem;
    font-weight: 600;
    line-height: 1.2;
  }
</style>
