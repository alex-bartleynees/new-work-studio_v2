---
import { sanityClient } from "sanity:client";
import "../styles/global.css";
import { sanityPortableText } from "../../utilities/portable-text";
import Layout from "../components/layout.astro";
import MainHeader from "../components/main-header.astro";
import { PortableText } from "astro-portabletext";

const data = await sanityClient.fetch(`*[_type == "profile"][0]`);
---

<Layout title="Profile | Tim Nees Architects" bodyClass="body__profile">
  <div class="backdrop">
    <MainHeader showLogo={true} />
    <section class="profile-text">
      <PortableText value={data.content} />
    </section>
  </div>
</Layout>

<style lang="scss" is:global>
  .body__profile::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("/models profile.webp");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    filter: grayscale(100%);
    z-index: -1;
  }

  .profile-text > * {
    margin-block: 1rem;
  }
</style>

<style>
  .profile-text {
    display: flex;
    flex-direction: column;
    margin-inline: 3.5rem;
    text-align: left;
    flex-grow: 1;
    max-width: 125ch;
  }
</style>
