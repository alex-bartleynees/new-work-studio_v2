---
import { useSanityClient } from "astro-sanity";
import "../styles/global.css";
import ContactMenu from "../components/contact-menu.astro";
import { sanityPortableText } from "../../utilities/portable-text";
import TitleLink from "../components/title-link.astro";
import Layout from "../components/layout.astro";

const data = await useSanityClient().fetch(`*[_type == "profile"][0]`);
---

<Layout
  title="Profile | Tim Nees Architects"
  bodyClass="body__profile backdrop"
>
  <div class="backdrop">
    <TitleLink link="/" />
    <section class="profile-text">
      <Fragment
        class:list="profile-text__list"
        set:html={sanityPortableText(data.content)}
      />
    </section>

    <ContactMenu />
  </div>
</Layout>

<style lang="scss" is:global>
  .body__profile::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("/models profile.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    filter: grayscale(100%);
    z-index: -1;
  }

  .profile-text > * {
    margin-block: 1rem;
    color: #ffffff;
  }
</style>

<style>
  .profile-text {
    max-width: 130ch;
    display: flex;
    flex-direction: column;
    padding: 5rem;
    text-align: justify;
    flex-grow: 1;
  }
</style>
