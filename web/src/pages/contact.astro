---
import { sanityClient } from "sanity:client";
import Layout from "../components/layout.astro";
import MainHeader from "../components/main-header.astro";
import { PortableText } from "astro-portabletext";

const data = await sanityClient.fetch(`*[_type == "contact"][0]`);
---

<Layout
  title="Contact | Tim Nees Architects"
  bodyClass="body__contact"
  description={`Contact Tim Nees Architects New Work Studio. Architecture is a collaboration. All collaborations start with a thought, a request for information, a conversation. New Work Studio/ Tim Nees Architects welcomes enquiries. No matter how straightforward or vague your thinking may seem, just get in touch. Fees are not charged unless a commission is confirmed. 139 Taylorâ€™s Mistake Road
Scarborough Christchurch 8081
New Zealand`}
>
  <div class="backdrop">
    <MainHeader showLogo={true} />
    <section class="contact-text">
      <PortableText value={data.content} />
    </section>
  </div>
</Layout>

<style lang="scss" is:global>
  .body__contact::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("/Contact background.webp");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    filter: grayscale(100%);
    z-index: -1;
  }

  .contact-text > * {
    margin-block: 1rem;
  }
</style>

<style>
  .contact-text {
    display: flex;
    flex-direction: column;
    margin-inline: 3.5rem;
    text-align: left;
    flex-grow: 1;
    max-width: 125ch;
  }
</style>
