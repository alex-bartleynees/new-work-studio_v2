---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
const { showLogo = false } = Astro.props;
---

<header class="heading">
  <a class="home-link" href="/"
    ><h1 class="main-heading">newworkstudio/</h1><h1>timneesarchitect</h1></a
  >

  <div class="navigation">
    <a href="/projects"
      ><h2 class={currentPath.includes("projects") ? "active" : ""}>
        projects
      </h2></a
    >
    <a href="/profile"
      ><h2 class={currentPath.includes("profile") ? "active" : ""}>
        profile
      </h2></a
    >
    <a href="/contact"
      ><h2 class={currentPath.includes("contact") ? "active" : ""}>
        contact
      </h2></a
    >
    <a href="https://www.instagram.com/timothygreignees/" target="_blank"
      ><h2>instagram</h2></a
    >
  </div>
</header>

{showLogo && <img class="logo" src="/NZIA-Logo.png" alt="NZIA practice logo" />}

<style lang="scss">
  .logo {
    width: 24rem;
    object-fit: contain;
    margin: 0.5rem 3.5rem;
    opacity: 0.9;
  }
  .home-link {
    display: flex;
    flex-wrap: wrap;
  }

  h2 {
    font-weight: 200;
  }

  .active {
    font-weight: bold;
  }

  .main-heading {
    word-wrap: break-word;
  }
  .heading {
    align-self: flex-start;
    width: min-content;
    padding: 0.5rem 3.5rem;
    display: flex;
    align-items: center;
    width: 100%;
    flex-wrap: wrap;
    z-index: 100;
    position: relative;
    column-gap: 3rem;
  }

  .navigation {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;

    @media screen and (max-width: 900px) {
      margin-inline-start: 0;
    }

    @media screen and (max-width: 37.5em) {
      justify-content: flex-start;
    }
  }
</style>
